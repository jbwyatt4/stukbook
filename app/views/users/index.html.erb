<div class="jumbotron text-center">
<h2>People</h2>
<div class="btn-group" role="group" aria-label="Default Button Groups">
	<%= link_to "Everyone", users_path, class: "btn btn-default #{'active' unless params[:people]}" %>
	<%= link_to "Friends #{@friend_count unless @friend_count == 0}", users_path(people: "friends"), class: "btn btn-default #{'active' if params[:people] == 'friends'}" %>
	<%= link_to "Requests #{@request_count unless @request_count == 0}", users_path(people: "requests"), class: "btn btn-default #{'active' if params[:people] == 'requests'}" %>
	<%= link_to "Pending #{@pending_count unless @pending_count == 0}", users_path(people: "pending"), class: "btn btn-default #{'active' if params[:people] == 'pending'}" %>
</div>
</div>

<div class="container">
<div class="row">
<%= render @users %>
</div>
</div>
